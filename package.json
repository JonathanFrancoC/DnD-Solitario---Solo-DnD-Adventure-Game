{
  "name": "dnd-solitario",
  "version": "1.0.0",
  "description": "Sistema de D&D en solitario con IA como DM",
  "main": "electron/main.js",
  "scripts": {
    "build": "vite build",
    "electron": "npm run build && electron .",
    "electron-dev": "electron .",
    "dist": "npm run build && electron-builder --publish=never",
    "setup": "node setup-characters-folder.js",
    "setup-characters": "node setup-characters-folder.js"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "lucide-react": "^0.294.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.104.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8"
  },
  "build": {
    "appId": "com.dndsolitario.app",
    "productName": "D&D Solitario",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/dice.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/dice.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/dice.png"
    }
  }
}
